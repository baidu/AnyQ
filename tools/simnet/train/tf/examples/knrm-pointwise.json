{
    "train_data":{
        "train_file":"data/convert_train_pointwise_data",
        "data_size":400,
        "left_slots":[["left",32]],
        "right_slots":[["right",32]]
    },

    "model":{
        "net_py":"./nets/knrm",
        "net_class":"KNRM",
        "vocabulary_size":3,
        "embedding_dim":128,
        "kernel_num":3,
        "lamb":0.5,
        "loss_py":"./losses/simnet_loss",
        "loss_class":"SoftmaxWithLoss"
    },

    "global":{
        "training_mode":"pointwise",
        "n_class":2,
        "max_len_left":32,
        "max_len_right":32
    },

    "setting":{
        "batch_size":64,
        "num_epochs":1,
        "thread_num":6,
        "print_iter":100,
        "model_path":"model/pointwise",
        "model_prefix":"knrm",
        "learning_rate":0.001,
        "shuffle":1
    },

    "test_data":{
        "test_file":"data/convert_test_pointwise_data",
        "test_model_file":"model/pointwise/knrm.epoch1",
        "test_result":"result_knrm_pointwise"
    },
    
    "freeze":{
        "save_path": "model/pointwise/knrm.epoch1",
        "freeze_path": "tf.graph"
    }
}
