{
    "train_data":{
        "train_file": "data/convert_train_point_data",
        "data_size": 400,
        "left_slots" : [["left",32]],
        "right_slots" : [["right",32]]
    },

    "model":{
        "net_py": "./nets/matchpyramid",
        "net_class": "MatchPyramid",
        "vocabulary_size": 3,
        "embedding_dim": 128,
        "num_filters": 256,
        "hidden_size": 128,
        "window_size_left": 3,
        "window_size_right": 3,
        "dpool_size_left": 2,
        "dpool_size_right": 2,
        "match_mask" : 1,
        "loss_py": "./losses/simnet_loss",
        "loss_class": "SoftmaxWithLoss"
    },

    "global":{
        "training_mode": "pointwise",
        "n_class": 2,
        "max_len_left": 32,
        "max_len_right": 32
    },

    "setting":{
        "batch_size": 64,
        "num_epochs": 1,
        "thread_num": 6,
        "print_iter": 100,
        "model_path": "model/pointwise",
        "model_prefix": "pyramid",
        "learning_rate": 0.001,
        "shuffle": 1
    },

    "test_data":{
        "test_file": "data/convert_test_pointwise_data",
        "test_model_file":  "model/pointwise/pyramid.epoch1",
        "test_result": "result_pyramid_pointwise"
    },
    
    "freeze":{
        "save_path": "model/pointwise/pyramid.epoch1",
        "freeze_path": "tf.graph"
    }
}
